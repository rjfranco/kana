{{#if answeredCorrectly}}
  {{continue-dialogue continue="checkInput"}}
{{/if}}

<div class="current-item">{{currentItemTest}}</div>

{{#if definition}}
  <p class="definition">( {{definition}} )</p>
{{/if}}

<form {{action "checkInput" on="submit"}} class={{formStatus}}>
  {{input name=user_input value=user_input class="user-input"}}
  <button type="submit" class="submit-button">
    <span class="status">{{buttonText}}</span>
    <span class="line-1"></span>
    <span class="line-2"></span>
    <span class="line-3"></span>
  </button>
</form>
